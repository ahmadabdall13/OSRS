<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/user_image_iv"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription="@string/products_image"/>

    <!-- Start Vertical Linear Layout for the two linear layouts inside it -->
    <LinearLayout
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Start Horizontal Linear Layout for the car brand and car model -->
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/request_id_tv"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="#201"
                    android:layout_margin="3dp"
                    android:textStyle="bold"
                    android:layout_marginStart="0dp"
                    android:textColor="@android:color/darker_gray"
       />


            <TextView
                    android:id="@+id/user_full_name_tv"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/car_brand"
                    android:textStyle="bold"
                    android:layout_marginStart="0dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


        </LinearLayout>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/car_model"
                  android:id="@+id/product_name_tv"
                  android:layout_marginStart="6dp"
                  android:padding="4dp"
                  android:textSize="13sp"
                  android:textStyle="bold"/>
        <!-- End Horizontal Linear Layout for the car brand and car model -->

        <!-- Start Horizontal Linear Layout for mileage and trans -->

        <!-- End Horizontal Linear Layout for mileage and trans -->

        <TextView android:layout_width="wrap_content"
                  android:text="@string/car_price"
                  android:layout_marginTop="10dp"
                  android:id="@+id/product_price_tv"
                  android:layout_marginStart="5dp"
                  android:textSize="15sp"
                  android:textColor="#FFD700"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- End Vertical Linear Layout for the two linear layouts inside it -->
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
android:orientation="vertical"
>

    <Button android:layout_width="wrap_content"
    android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:text="Hire"
            android:layout_margin="5dp"
            android:id="@+id/hire_request_btn"
    ></Button>

    <Button android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:text="Decline"
            android:id="@+id/decline_request_btn"
    ></Button>

</LinearLayout>

</LinearLayout>
