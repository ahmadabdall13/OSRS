<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/chat_iv"
            android:layout_margin="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/chat_icon"
            android:contentDescription="@string/products_image"/>

    <!-- Start Vertical Linear Layout for the two linear layouts inside it -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Start Horizontal Linear Layout for the car brand and car model -->
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/chat_title_tv"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="title"
                    android:textStyle="bold"
                    android:layout_marginStart="0dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>



        </LinearLayout>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="productId"
                  android:id="@+id/productId_tv"
                  android:layout_marginStart="6dp"
                  android:padding="4dp"
                  android:textColor="@android:color/darker_gray"
                  android:textSize="15sp"
                  android:textStyle="bold"/>
        <!-- End Horizontal Linear Layout for the car brand and car model -->

        <!-- Start Horizontal Linear Layout for mileage and trans -->

        <!-- End Horizontal Linear Layout for mileage and trans -->

        <TextView android:layout_width="wrap_content"
                  android:text="Open Chat"
                  android:layout_marginTop="4dp"
                  android:id="@+id/go_to_chat"
                  android:layout_marginStart="5dp"
                  android:textSize="15sp"
                  android:textColor="#FFD700"
                  android:textStyle="bold"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- End Vertical Linear Layout for the two linear layouts inside it -->


</LinearLayout>
